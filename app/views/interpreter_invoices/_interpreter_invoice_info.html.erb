<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        ID
      </th>
      <th>
        Interpreter
      </th>
      <th>
        Job
      </th>
      <th>
        Start Date
      </th>
      <th>
        Start Time
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @interpreter_invoice.id %>
      </td>
      <td>
        <%= link_to "#{@interpreter_invoice.user.first_name} #{@interpreter_invoice.user.last_name}", @interpreter_invoice.user %>
      </td>
      <td>
        <%= link_to "Job ##{@interpreter_invoice.job.id}", @interpreter_invoice.job %>
      </td>
      <td>
        <%= @interpreter_invoice.start_date.to_formatted_s(:long_ordinal) %>
      </td>
      <td>
        <% if @interpreter_invoice.start_time? %>
          <%= @interpreter_invoice.start_time.strftime("%A, %d %b %Y %l:%M %p") %>
        <% end %>
      </td>
    </tr>
  </tbody>
  <thead>
    <tr>
      <th>
        Requested End Time
      </th>
      <th>
        Actual End Time
      </th>
      <th>
        Job Type
      </th>
      <th>
        Contact Person
      </th>
      <th>
        Contact Person Phone
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <% if @interpreter_invoice.requested_end_time? %>
          <%= @interpreter_invoice.requested_end_time.strftime("%A, %d %b %Y %l:%M %p") %>
        <% end %>
      </td>
      <td>
        <% if @interpreter_invoice.actual_end_time? %>
          <%= @interpreter_invoice.actual_end_time.strftime("%A, %d %b %Y %l:%M %p") %>
        <% end %>
      </td>
      <td>
        <%= @interpreter_invoice.job_type %>
      </td>
      <td>
        <%= @interpreter_invoice.contact_person_first_name %> <%= @interpreter_invoice.contact_person_last_name %>
      </td>
      <td>
        <%= @interpreter_invoice.contact_person_phone_number %>
      </td>
    </tr>
  </tbody>
  <thead>
    <tr>
      <th>
        Miles
      </th>
      <th>
        Mile Rate
      </th>
      <th>
        Misc. Travel
      </th>
      <th>
        Interpreting Hours (Regular)
      </th>
      <th>
        Interpreting Rate (Regular)
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @interpreter_invoice.miles %>
      </td>
      <td>
        <%= @interpreter_invoice.mile_rate %>
      </td>
      <td>
        <%= @interpreter_invoice.misc_travel %>
      </td>
      <td>
        <%= @interpreter_invoice.interpreting_hours %>
      </td>
      <td>
        <%= @interpreter_invoice.interpreting_rate %>
      </td>
    </tr>
  </tbody>
  <thead>
    <tr>
      <th>
        Interpreting Hours (After Hour)
      </th>
      <th>
        Interpreting Rate (After Hour)
      </th>
      <th>
        Legal Hours (Regular)
      </th>
      <th>
        Legal Rate (Regular)
      </th>
      <th>
        Legal Hours (After Hour)
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @interpreter_invoice.extra_interpreting_hours %>
      </td>
      <td>
        <%= @interpreter_invoice.extra_interpreting_rate %>
      </td>
      <td>
        <%= @interpreter_invoice.legal_hours %>
      </td>
      <td>
        <%= @interpreter_invoice.legal_rate %>
      </td>
      <td>
        <%= @interpreter_invoice.extra_legal_hours %>
      </td>
    </tr>
  </tbody>
  <thead>
    <tr>
      <th>
        Legal Rate (After Hour)
      </th>
      <th>
      </th>
      <th>
      </th>
      <th>
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @interpreter_invoice.extra_legal_rate %>
      </td>
      <td>
      </td>
      <td>
      </td>
      <td>
      </td>
      <td>
      </td>
    </tr>
  </tbody>
</table>
<!-- /.table table-striped table-hover -->
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">
      Address:
    </h3>
    <!-- /.panel-title -->
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <% if @interpreter_invoice.event_location_address_line_1.length != 0 %>
      <%= @interpreter_invoice.event_location_address_line_1 %>
    <% end %>
    <% if @interpreter_invoice.event_location_address_line_2.length != 0 %>
      <br>
      <%= @interpreter_invoice.event_location_address_line_2 %>
    <% end %>
    <% if @interpreter_invoice.event_location_address_line_3.length != 0 %>
      <br>
      <%= @interpreter_invoice.event_location_address_line_3 %>
    <% end %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /. panel panel-info -->
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">
      Interpreter Comments:
    </h3>
    <!-- /.panel-title -->
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <% if @interpreter_invoice.interpreter_comments.length != 0 %>
      <%= @interpreter_invoice.interpreter_comments %>
    <% else %>
      N/A
    <% end %>
  </div>
  <!-- /.panel-body -->
</div>
<!-- /. panel panel-info -->
