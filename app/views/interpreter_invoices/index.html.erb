<%= render 'layouts/interpreter_or_manager_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
        <% if user_logged_in? && current_user.manager? %>
          <% provide(:title, 'All Interpreter Invoices') %>
          All Interpreter Invoices
        <% elsif user_logged_in? && !current_user.manager? && current_user.approved? %>
          <% provide(:title, 'Your Submitted Invoices') %>
          Your Submitted Invoices
        <% end %>
      </h3>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <% if user_logged_in? && !current_user.manager? && !current_user.approved? %>
    <p style="text-align: center">
      Please wait for TSHA to approve your account before jobs can be viewed.
    </p>
  <% end %>
  <% if user_logged_in? && current_user.approved? && current_user.active? && !current_user.manager? %>
    <% if @user_invoices.count == 0 %>
      <div class="alert alert-info" role="alert">No results found.</div>
    <% end %>
		<table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
            Job
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
          <th>
            <% if current_user.manager? %>
              Manager Invoice?
            <% else %>
              TSHA Invoice?
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @user_invoices.each do |user_invoice| %>
          <tr>
            <td>
              <%= link_to "Invoice ##{user_invoice.id}", user_invoice %>
            </td>
            <td>
              <%= link_to "Job ##{user_invoice.job.id}", user_invoice.job %>
            <td>
              <%= user_invoice.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= user_invoice.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <% @manager_invoice = user_invoice.manager_invoices.first %>
              <% if @manager_invoice %>
                <% if current_user.manager? %>
                  <%= link_to "Manager Invoice ##{@manager_invoice.id}", @manager_invoice %>
                <% else %>
                  <%= link_to "TSHA Invoice ##{@manager_invoice.id}", @manager_invoice %>
                <% end %>
              <% else %>
                <span class="label label-warning">Waiting on Manager Invoice</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% elsif user_logged_in? && current_user.manager? %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          Search by: ID, Job Type, Address, Contact Name, or Contact Phone
        </h3>
        <!-- /.panel-title -->
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <% if params[:search].present? %>
          <% if params[:search][:created_after].present? %>
            <% if params[:search][:created_before].present? %>
              <% if params[:search][:query].present? %>
                <%= simple_form_for :search,  url: interpreter_invoices_path , :method => :get do |f| %>
                  <%= f.input :created_after, as: :date_time_picker, input_html: { value: params[:search][:created_after] } %>
                  <%= f.input :created_before, as: :second_date_time_picker, input_html: { value: params[:search][:created_before] } %>
                  <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
                  <%= f.submit "Search" %>
                <% end %>
              <% else %>
                <%= simple_form_for :search,  url: interpreter_invoices_path , :method => :get do |f| %>
                  <%= f.input :created_after, as: :date_time_picker, input_html: { value: params[:search][:created_after] } %>
                  <%= f.input :created_before, as: :second_date_time_picker, input_html: { value: params[:search][:created_before] } %>
                  <%= f.input :query, :autofocus => true %>
                  <%= f.submit "Search" %>
                <% end %>
              <% end %>
            <% elsif params[:search][:query].present? %>
              <%= simple_form_for :search,  url: interpreter_invoices_path , :method => :get do |f| %>
                <%= f.input :created_after, as: :date_time_picker, input_html: { value: params[:search][:created_after] } %>
                <%= f.input :created_before, as: :second_date_time_picker %>
                <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
                <%= f.submit "Search" %>
              <% end %>
            <% else %>
              <%= simple_form_for :search,  url: interpreter_invoices_path , :method => :get do |f| %>
                <%= f.input :created_after, as: :date_time_picker, input_html: { value: params[:search][:created_after] } %>
                <%= f.input :created_before, as: :second_date_time_picker %>
                <%= f.input :query, :autofocus => true %>
                <%= f.submit "Search" %>
              <% end %>
            <% end %>
          <% elsif params[:search][:created_before].present? %>
            <% if params[:search][:query].present? %>
              <%= simple_form_for :search,  url: interpreter_invoices_path , :method => :get do |f| %>
                <%= f.input :created_after, as: :date_time_picker %>
                <%= f.input :created_before, as: :second_date_time_picker, input_html: { value: params[:search][:created_before] } %>
                <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
                <%= f.submit "Search" %>
              <% end %>
            <% else %>
              <%= simple_form_for :search,  url: interpreter_invoices_path , :method => :get do |f| %>
                <%= f.input :created_after, as: :date_time_picker %>
                <%= f.input :created_before, as: :second_date_time_picker, input_html: { value: params[:search][:created_before] } %>
                <%= f.input :query, :autofocus => true %>
                <%= f.submit "Search" %>
              <% end %>
            <% end %>
          <% else %>
            <%= simple_form_for :search,  url: interpreter_invoices_path , :method => :get do |f| %>
              <%= f.input :created_after, as: :date_time_picker %>
              <%= f.input :created_before, as: :second_date_time_picker %>
              <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
              <%= f.submit "Search" %>
            <% end %>
          <% end %>
        <% else %>
          <%= simple_form_for :search,  url: interpreter_invoices_path , :method => :get do |f| %>
            <%= f.input :created_after, as: :date_time_picker %>
            <%= f.input :created_before, as: :second_date_time_picker %>
            <%= f.input :query, :autofocus => true %>
            <%= f.submit "Search" %>
          <% end %>
        <% end %>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel panel-info -->

    <script type="text/javascript">
      $('.form_datetime').datetimepicker({
        autoclose: true,
        todayBtn: true,
        pickerPosition: "bottom-left",
        format: 'mm-dd-yyyy hh:ii'
      });
      $('.second_form_datetime').datetimepicker({
        autoclose: true,
        todayBtn: true,
        pickerPosition: "bottom-left",
        format: 'mm-dd-yyyy hh:ii'
      });
    </script>

    <%= will_paginate @user_invoices %>

    <% if @user_invoices.count == 0 %>
      <div class="alert alert-info" role="alert">No results found.</div>
    <% end %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
            Job
          </th>
          <th>
            Manager Invoice
          </th>
          <th>
            Interpreter
          </th>
          <th>
            Job End
          </th>
        </tr>
      </thead>
      <tbody>
        <% @user_invoices.each do |user_invoice| %>
          <tr>
            <td>
              <%= link_to "Invoice ##{user_invoice.id}", user_invoice %>
            </td>
            <td>
              <%= link_to "Job ##{user_invoice.job.id}", user_invoice.job %>
            </td>
            <td>
              <% @manager_invoice = user_invoice.manager_invoices.first %>
              <% if @manager_invoice %>
                <%= link_to "Invoice ##{@manager_invoice.id}", @manager_invoice %>
              <% else %>
                N/A
              <% end %>
            </td>
            <td>
              <%= link_to "#{user_invoice.user.first_name} #{user_invoice.user.last_name}", user_invoice.user %>
            </td>
            <td>
              <%= user_invoice.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
         </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->

    <%= will_paginate @user_invoices %>
  <% end %>
</div>
<!-- /.page-wrapper -->
