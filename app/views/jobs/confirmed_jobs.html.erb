<% provide(:title, 'Confirmed Jobs') %>
<%= render 'layouts/manager_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
          Confirmed Jobs
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          ID
        </th>
        <th>
         Customer Name
        </th>
        <th>
          Location
        </th>
        <th>
          Start
        </th>
        <th>
          End
        </th>
        <th>
          Status
        </th>
      </tr>
    </thead>
    <tbody>
      <% @confirmed_jobs.each do |confirmed_job| %>
        <tr>
          <td>
            <%= link_to "#{confirmed_job.id}", confirmed_job %>
          </td>
          <td>
            <%= link_to "#{confirmed_job.customer.customer_name}", confirmed_job %>
          </td>
          <td>
            <%= link_to "#{confirmed_job.city}, #{confirmed_job.state} #{confirmed_job.zip}", confirmed_job %>
          </td>
          <td>
            <%= confirmed_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
          <td>
            <%= confirmed_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
          <td>
            <% if confirmed_job.has_interpreter_assigned? && confirmed_job.start > Time.now %>
              <span class="label label-success">Confirmed</span>
            <% elsif confirmed_job.expired? %>
              <span class="label label-danger">Expired</span>
            <% elsif !confirmed_job.has_interpreter_assigned? && !confirmed_job.expired? %>
              <span class="label label-warning">Needs Confirmation</span>
            <% elsif confirmed_job.has_interpreter_assigned? && confirmed_job.start < Time.now && !confirmed_job.completed? %>
              <span class="label label-success">Awaiting Completion</span>
            <% elsif confirmed_job.has_interpreter_assigned? && confirmed_job.start < Time.now && !confirmed_job.invoice_submitted? %>
              <span class="label label-warning">Awaiting Invoice</span>
            <% end %>
          </td>
       </tr>
      <% end %>
    </tbody>
  </table>
  <!-- /.table table-striped table-hover -->
</div>
<!-- /.page-wrapper -->
