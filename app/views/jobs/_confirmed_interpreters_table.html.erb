<table class="table table-striped table-hover">
  <thead>
    <th>
      Requester Name
    </th>
    <th>
      Status
    </th>
    <th>
      Manager Action
    </th>
  </thead>
  <tbody>
    <% @confirmed_interpreters.each do |confirmed_interpreter| %>
      <tr>
        <td>
           <%= link_to "#{confirmed_interpreter.first_name} #{confirmed_interpreter.last_name}", confirmed_interpreter %>
        </td>
        <td>
          <% @interpreter_invoice = InterpreterInvoice.where(user_id: confirmed_interpreter.id, job_id: @job.id) %>
          <% if @job.completed? && !@job.invoice_submitted? && !@interpreter_invoice %>
            <span class="label label-warning">Need Invoice from Interpreter</span>
          <% elsif @job.completed? && !@job.invoice_submitted? && @interpreter_invoice %>
            <span class="label label-warning">Need Invoice from Manager</span>
          <% else %>
            <span class="label label-success">Confirmed</span>
          <% end %>
        </td>
        <td>
          <% if @job.completed? && !@job.invoice_submitted? && !@interpreter_invoice %>
            N/A
          <% elsif @job.completed? && !@job.invoice_submitted? && @interpreter_invoice %>
              <%= link_to "Submit Manager Invoice", new_interpreter_invoice_from_job_interpreter_invoice_path(
               :user_id => current_user.id, :job_id => @job.id,
               :start => @job.start, :end => @job.end,
               :contact_person_first_name => @job.contact_person_first_name,
               :contact_person_last_name => @job.contact_person_last_name,
               :contact_person_phone_number => @job.customer.contact_phone_number,
               :event_location_address_line_1 => @job.address_line_1,
               :event_location_address_line_2 => @job.address_line_2,
               :event_location_address_line_3 => @job.address_line_3),
               :class => "btn btn-success" %>
            <% end %>
          <% else %>
            N/A
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- /. table table-striped table-hover -->