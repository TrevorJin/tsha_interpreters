<% if user_logged_in? && current_user.manager? %>
  <% provide(:title, 'All Jobs') %>
<% elsif user_logged_in? && !current_user.manager? %>
  <% provide(:title, 'Available Jobs') %>
<% end %>
<% if user_logged_in? && current_user.manager? %>
  <%= render 'layouts/manager_dashboard' %>
<% elsif user_logged_in? && !current_user.manager? %>
<%= render 'layouts/interpreter_dashboard' %>
  
<% end %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        <% if user_logged_in? && current_user.manager? %>
          All Jobs
        <% elsif user_logged_in? && !current_user.manager? && current_user.approved? %>
          Available Jobs
        <% elsif user_logged_in? && !current_user.manager? && !current_user.approved? %>
          Awaiting Approval
        <% end %>
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <% if user_logged_in? && !current_user.manager? && !current_user.approved? %>
    <p style="text-align: center">
      Please wait for TSHA to approve your account before jobs can be viewed.
    </p>
  <% end %>
  <% if user_logged_in? && current_user.approved? && !current_user.manager? %>
	 <ul class="jobs">
		  <%= render @jobs %>
	 </ul>
	 <!-- /.jobs -->
  <% elsif user_logged_in? && current_user.manager? %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
           Customer Name
          </th>
          <th>
            Location
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td>
              <%= link_to "#{job.id}", job %>
            </td>
            <td>
              <%= link_to "#{job.customer.customer_name}", job %>
            </td>
            <td>
              <%= link_to "#{job.city}, #{job.state} #{job.zip}", job %>
            </td>
            <td>
              <%= job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
         </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% end %>


</div>
<!-- /.page-wrapper -->
