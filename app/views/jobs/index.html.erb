<% if user_logged_in? && current_user.manager? %>
  <% provide(:title, 'All Jobs') %>
<% elsif user_logged_in? && !current_user.manager? %>
  <% provide(:title, 'Available Jobs') %>
<% end %>
<% if user_logged_in? && current_user.manager? %>
  <%= render 'layouts/manager_dashboard' %>
<% elsif user_logged_in? && !current_user.manager? %>
  <%= render 'layouts/interpreter_dashboard' %>
<% end %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        <% if user_logged_in? && current_user.manager? %>
          All Jobs
        <% elsif user_logged_in? && !current_user.manager? && current_user.approved? %>
          Available Jobs
        <% elsif user_logged_in? && !current_user.manager? && !current_user.approved? %>
          Awaiting Approval
        <% end %>
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <% if user_logged_in? && !current_user.manager? && !current_user.approved? %>
    <p style="text-align: center">
      Please wait for TSHA to approve your account before jobs can be viewed.
    </p>
  <% end %>
  <% if user_logged_in? && current_user.approved? && !current_user.manager? %>
		<table class="table table-striped table-hover">
      <thead>
        <th>
          Location
        </th>
        <th>
          Start
        </th>
        <th>
          End
        </th>
        <th>
          Action?
        </th>
      </thead>
      <tbody>
        <% @user_jobs.each do |user_job| %>
          <tr>
            <td>
              <%= user_job.city %>, <%= user_job.state %>
            </td>
            <td>
              <%= user_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= user_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <div class="btn-group" role="group" aria-label="Justified button group">
                <%= form_for(current_user.attempted_job_requests.build) do |f| %>
                  <div>
                    <%= hidden_field_tag :job_id, user_job.id %>
                  </div>
                  <%= f.submit "Request", class: "btn btn-primary" %>
                <% end %>
              </div>
              <!-- /.btn-group btn-group-justified -->
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% elsif user_logged_in? && current_user.manager? %>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">
        Search by: ID, Requester, Requester Phone/Email, Contact, or Address
      </h3>
      <!-- /.panel-title -->
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <%= form_tag(jobs_path, :method => "get", class: "navbar-form", id: "search-form") do %>
        <div class="input-append">
          <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search" %>
            <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
          <button type="submit" class="btn btn-primary">
            Search
          </button>
            <!-- /.btn btn-primary -->
        </div>
          <!-- /.input-append -->
      <% end %>
    </div>
    <!-- /.panel-body -->
  </div>
  <!-- /.panel panel-info -->

  <%= will_paginate @jobs %>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
           Customer Name
          </th>
          <th>
            Location
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
          <th>
            Status
          </th>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
          <tr>
            <td>
              <%= link_to "#{job.id}", job %>
            </td>
            <td>
              <%= link_to "#{job.customer.customer_name}", job %>
            </td>
            <td>
              <%= link_to "#{job.city}, #{job.state} #{job.zip}", job %>
            </td>
            <td>
              <%= job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <% if job.has_interpreter_assigned? && Time.now < job.start %>
                <span class="label label-success">Confirmed</span>
              <% elsif job.expired? %>
                <span class="label label-danger">Expired</span>
              <% elsif !job.has_interpreter_assigned? && !job.expired? %>
                <span class="label label-warning">Needs Confirmation</span>
              <% elsif job.has_interpreter_assigned? && !job.completed? %>
                <span class="label label-success">Awaiting Completion</span>
              <% elsif job.has_interpreter_assigned? && !job.invoice_submitted? && job.completed? %>
                <span class="label label-warning">Awaiting Invoice</span>
              <% end %>
            </td>
         </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->

    <%= will_paginate @jobs %>
  <% end %>
</div>
<!-- /.page-wrapper -->
