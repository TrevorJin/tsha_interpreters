<%= render 'layouts/interpreter_or_manager_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
        <% if user_logged_in? %>
          <% if current_user.manager? %>
            <% provide(:title, 'All Jobs') %>
            All Jobs
          <% elsif !current_user.manager? %>
            <% if !current_user.active? %>
              <% provide(:title, 'Account Deactivated') %>
              Account Deactivated
            <% elsif current_user.approved? %>
              <% provide(:title, 'Available Jobs') %>
              Available Jobs
            <% elsif !current_user.approved? %>
              <% provide(:title, 'Awaiting Approval') %>
              Awaiting Approval
            <% end %>
          <% end %>
        <% end %>
      </h3>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <% if user_logged_in? && !current_user.manager? && !current_user.active? %>
    <p style="text-align: center">
      Your account has been deactivated by TSHA. Contact TSHA for more informaiton.
    </p>
  <% elsif user_logged_in? && !current_user.manager? && !current_user.approved? %>
    <p style="text-align: center">
      Please wait for TSHA to approve your account before jobs can be viewed.
    </p>
  <% end %>
  <% if user_logged_in? && current_user.approved? && current_user.active? && !current_user.manager? %>
		<table class="table table-striped table-hover">
      <thead>
        <th>
          Location
        </th>
        <th>
          Start
        </th>
        <th>
          End
        </th>
        <th>
          Action?
        </th>
      </thead>
      <tbody>
        <% @user_jobs.each do |user_job| %>
          <tr>
            <td>
              <%= user_job.city %>, <%= user_job.state %>
            </td>
            <td>
              <%= user_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= user_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <div class="btn-group" role="group" aria-label="Justified button group">
                <%= form_for(current_user.attempted_job_requests.build) do |f| %>
                  <div>
                    <%= hidden_field_tag :job_id, user_job.id %>
                  </div>
                  <%= f.submit "Request", class: "btn btn-primary" %>
                <% end %>
              </div>
              <!-- /.btn-group btn-group-justified -->
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% elsif user_logged_in? && current_user.manager? %>
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          Search by: ID, Requester, Requester Phone/Email, Contact, or Address
        </h3>
        <!-- /.panel-title -->
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <% if params[:search].present? %>
          <% if params[:search][:start_after].present? %>
            <% if params[:search][:end_before].present? %>
              <% if params[:search][:query].present? %>
                <%= simple_form_for :search,  url: jobs_path , :method => :get do |f| %>
                  <%= f.input :start_after, as: :date_time_picker, input_html: { value: params[:search][:start_after] } %>
                  <%= f.input :end_before, as: :second_date_time_picker, input_html: { value: params[:search][:end_before] } %>
                  <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
                  <%= f.submit "Search" %>
                <% end %>
              <% else %>
                <%= simple_form_for :search,  url: jobs_path , :method => :get do |f| %>
                  <%= f.input :start_after, as: :date_time_picker, input_html: { value: params[:search][:start_after] } %>
                  <%= f.input :end_before, as: :second_date_time_picker, input_html: { value: params[:search][:end_before] } %>
                  <%= f.input :query, :autofocus => true %>
                  <%= f.submit "Search" %>
                <% end %>
              <% end %>
            <% elsif params[:search][:query].present? %>
              <%= simple_form_for :search,  url: jobs_path , :method => :get do |f| %>
                <%= f.input :start_after, as: :date_time_picker, input_html: { value: params[:search][:start_after] } %>
                <%= f.input :end_before, as: :second_date_time_picker %>
                <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
                <%= f.submit "Search" %>
              <% end %>
            <% else %>
              <%= simple_form_for :search,  url: jobs_path , :method => :get do |f| %>
                <%= f.input :start_after, as: :date_time_picker, input_html: { value: params[:search][:start_after] } %>
                <%= f.input :end_before, as: :second_date_time_picker %>
                <%= f.input :query, :autofocus => true %>
                <%= f.submit "Search" %>
              <% end %>
            <% end %>
          <% elsif params[:search][:end_before].present? %>
            <% if params[:search][:query].present? %>
              <%= simple_form_for :search,  url: jobs_path , :method => :get do |f| %>
                <%= f.input :start_after, as: :date_time_picker %>
                <%= f.input :end_before, as: :second_date_time_picker, input_html: { value: params[:search][:end_before] } %>
                <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
                <%= f.submit "Search" %>
              <% end %>
            <% else %>
              <%= simple_form_for :search,  url: jobs_path , :method => :get do |f| %>
                <%= f.input :start_after, as: :date_time_picker %>
                <%= f.input :end_before, as: :second_date_time_picker, input_html: { value: params[:search][:end_before] } %>
                <%= f.input :query, :autofocus => true %>
                <%= f.submit "Search" %>
              <% end %>
            <% end %>
          <% else %>
            <%= simple_form_for :search,  url: jobs_path , :method => :get do |f| %>
              <%= f.input :start_after, as: :date_time_picker %>
              <%= f.input :end_before, as: :second_date_time_picker %>
              <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
              <%= f.submit "Search" %>
            <% end %>
          <% end %>
        <% else %>
          <%= simple_form_for :search,  url: jobs_path , :method => :get do |f| %>
            <%= f.input :start_after, as: :date_time_picker %>
            <%= f.input :end_before, as: :second_date_time_picker %>
            <%= f.input :query, :autofocus => true %>
            <%= f.submit "Search" %>
          <% end %>
        <% end %>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel panel-info -->

    <script type="text/javascript">
      $('.form_datetime').datetimepicker({
        autoclose: true,
        todayBtn: true,
        pickerPosition: "bottom-left",
        format: 'mm-dd-yyyy hh:ii'
      });
      $('.second_form_datetime').datetimepicker({
        autoclose: true,
        todayBtn: true,
        pickerPosition: "bottom-left",
        format: 'mm-dd-yyyy hh:ii'
      });
    </script>

    <%= will_paginate @jobs %>

    <% if @jobs.count == 0 %>
      <div class="alert alert-info" role="alert">No results found.</div>
    <% else %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>
              ID
            </th>
            <th>
             Customer Name
            </th>
            <th>
              Location
            </th>
            <th>
              Start
            </th>
            <th>
              End
            </th>
            <th>
              Status
            </th>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |job| %>
            <tr>
              <td>
                <%= link_to "#{job.id}", job %>
              </td>
              <td>
                <%= link_to "#{job.customer.customer_name}", job %>
              </td>
              <td>
                <%= link_to "#{job.city}, #{job.state}", job %>
              </td>
              <td>
                <%= job.start.strftime("%A, %d %b %Y %l:%M %p") %>
              </td>
              <td>
                <%= job.end.strftime("%A, %d %b %Y %l:%M %p") %>
              </td>
              <td>
                <% if job.job_status_confirmed? %>
                  <span class="label label-success">Confirmed</span>
                <% elsif job.job_status_expired? %>
                  <span class="label label-danger">Expired</span>
                <% elsif job.job_status_needs_confirmation? %>
                  <span class="label label-warning">Needs Confirmation</span>
                <% elsif job.job_status_awaiting_completion? %>
                  <span class="label label-success">Awaiting Completion</span>
                <% elsif job.job_status_awaiting_invoice? %>
                  <span class="label label-warning">Awaiting Invoice</span>
                <% elsif job.job_status_processed? %>
                  <span class="label label-success">Processed</span>
                <% end %>
              </td>
           </tr>
          <% end %>
        </tbody>
      </table>
      <!-- /.table table-striped table-hover -->
      
      <%= will_paginate @jobs %>
    <% end %>
  <% end %>
</div>
<!-- /.page-wrapper -->
