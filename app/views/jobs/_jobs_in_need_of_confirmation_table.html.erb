<% if @jobs_in_need_of_confirmation.count == 0 %>
  <%= render 'layouts/no_results_found_alert' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          ID
        </th>
        <th>
         Customer Name
        </th>
        <th>
          Location
        </th>
        <th>
          Start
        </th>
        <th>
          End
        </th>
        <th>
          Status
        </th>
      </tr>
    </thead>
    <tbody>
      <% @jobs_in_need_of_confirmation.each do |job_in_need_of_confirmation| %>
        <tr>
          <td>
            <%= link_to "#{job_in_need_of_confirmation.id}", job_in_need_of_confirmation %>
          </td>
          <td>
            <%= link_to "#{job_in_need_of_confirmation.customer.customer_name}", job_in_need_of_confirmation %>
          </td>
          <td>
            <%= link_to "#{job_in_need_of_confirmation.city}, #{job_in_need_of_confirmation.state} #{job_in_need_of_confirmation.zip}", job_in_need_of_confirmation %>
          </td>
          <td>
            <%= job_in_need_of_confirmation.start.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
          <td>
            <%= job_in_need_of_confirmation.end.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
          <td>
            <% if job_in_need_of_confirmation.job_status_confirmed? %>
              <span class="label label-success">Confirmed</span>
            <% elsif job_in_need_of_confirmation.job_status_expired? %>
              <span class="label label-danger">Expired</span>
            <% elsif job_in_need_of_confirmation.job_status_needs_confirmation? %>
              <span class="label label-warning">Needs Confirmation</span>
            <% elsif job_in_need_of_confirmation.job_status_awaiting_completion? %>
              <span class="label label-success">Awaiting Completion</span>
            <% elsif job_in_need_of_confirmation.job_status_awaiting_invoice? %>
              <span class="label label-warning">Awaiting Invoice</span>
            <% elsif job_in_need_of_confirmation.job_status_processed? %>
              <span class="label label-success">Processed</span>
            <% end %>
          </td>
       </tr>
      <% end %>
    </tbody>
  </table>
  <!-- /.table table-striped table-hover -->
<% end %>
