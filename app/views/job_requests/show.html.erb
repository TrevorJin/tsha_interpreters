<% provide(:title, "Job Request #{@job_request.id}") %>
<% if customer_logged_in? %>
  <%= render 'layouts/customer_dashboard' %>
<% elsif user_logged_in? && current_user.manager? %>
  <%= render 'layouts/manager_dashboard' %>
<% end %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          Job Request #<%= @job_request.id %>
          <br>
          Customer: <%= @job_request.customer.customer_name %>
          <br>
          Location: <%= @job_request.city %>, <%= @job_request.state %>  <%= @job_request.zip %>
        </h1>
      </section>
      <!-- /.user_info -->
    </aside>
    <!-- /.col-md-4 -->
  </div>
  <!-- /.row -->
</div>
<!-- /.page-wrapper -->