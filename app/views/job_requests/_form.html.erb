<%= simple_form_for @job_request do |f| %>
  <%= f.input :requester_first_name %>
  <%= f.input :requester_last_name %>
  <%= f.input :office_business_name %>
  <%= f.input :requester_email %>
  <%= f.input :requester_phone_number %>
  <%= f.input :requester_fax_number %>
  <%= f.input :start_date, as: :date %>
  <%= f.input :deaf_client_first_name %>
  <%= f.input :deaf_client_last_name %>
  <%= f.input :contact_person_first_name %>
  <%= f.input :contact_person_last_name %>
  <%= f.input :event_location_address_line_1 %>
  <%= f.input :event_location_address_line_2 %>
  <%= f.input :event_location_address_line_3 %>
  <%= f.input :city %>
  <%= f.input :state, :collection => us_states %>
  <%= f.input :zip %>
  <%= f.input :office_phone_number %>
  <%= f.input :type_of_appointment_situation %>
  <%= f.input :message %>
  <%= f.submit "Submit Job Request", class: "btn btn-primary" %>
<% end %>
