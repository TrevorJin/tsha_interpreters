<%= render 'layouts/manager_or_customer_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <% if customer_logged_in? %>
    <div class="row">
      <div class="col-lg-12">
        <h3 class="page-header">
          <% if customer_logged_in? && !current_customer.active? %>
            <% provide(:title, 'Account Deactivated') %>
            Account Deactivated
          <% elsif current_customer.approved? %>
            <% provide(:title, 'All Job Requests') %>
            All Job Requests
          <% else %>
            <% provide(:title, 'Awaiting Approval') %>
            Awaiting Approval
          <% end %>
        </h3>
        <!-- /.page-header -->
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  <% end %>
  <% if customer_logged_in? && !current_customer.active? %>
    <p style="text-align: center">
      Your account has been deactivated by TSHA. Contact TSHA for more informaiton.
    </p>
  <% elsif customer_logged_in? && !current_customer.approved? %>
    <p style="text-align: center">
      Please wait for TSHA to approve your account before jobs can be requested.
    </p>
  <% elsif customer_logged_in? && current_customer.approved? && current_customer.active? %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
            Deaf Client
          </th>
          <th>
            Contact Person
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
          <th>
            Status
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render @job_requests %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% elsif user_logged_in? && current_user.manager? %>
    <div class="row">
      <div class="col-lg-12">
        <h3 class="page-header">
          <% provide(:title, 'Job Request History') %>
          Job Request History
        </h3>
        <!-- /.page-header -->
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          Search by: ID, Office/Business Name, Requester, Deaf Client, Contact, Address or Phone Number
        </h3>
        <!-- /.panel-title -->
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <%= form_tag(job_requests_path, :method => "get", class: "navbar-form", id: "search-form") do %>
          <div class="input-append">
            <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search" %>
              <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
                   of using a Rails form helper -->
            <button type="submit" class="btn btn-primary">
              Search
            </button>
            <!-- /.btn btn-primary -->
          </div>
          <!-- /.input-append -->
        <% end %>
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel panel-info -->

    <%= will_paginate @job_requests_not_awaiting_approval %>

    <% if @job_requests_not_awaiting_approval.count == 0 %>
      <div class="alert alert-info" role="alert">No results found.</div>
    <% end %>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
            Office/Business Name
          </th>
          <th>
            Requester
          </th>
          <th>
            Deaf Client
          </th>
          <th>
            Contact Person
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
          <th>
            Status
          </th>
        </tr>
      </thead>
      <tbody>
        <% @job_requests_not_awaiting_approval.each do |job_request_not_awaiting_approval| %>
          <tr>
            <td>
              <%= link_to "#{job_request_not_awaiting_approval.id}", job_request_not_awaiting_approval %>
            </td>
            <td>
              <%= link_to "#{job_request_not_awaiting_approval.office_business_name}", job_request_not_awaiting_approval %>
            </td>
            <td>
              <%= link_to "#{job_request_not_awaiting_approval.requester_first_name} #{job_request_not_awaiting_approval.requester_last_name}", job_request_not_awaiting_approval %>
            </td>
            <td>
              <%= link_to "#{job_request_not_awaiting_approval.deaf_client_first_name} #{job_request_not_awaiting_approval.deaf_client_last_name}", job_request_not_awaiting_approval %>
            </td>
            <td>
              <%= link_to "#{job_request_not_awaiting_approval.contact_person_first_name} #{job_request_not_awaiting_approval.contact_person_last_name}", job_request_not_awaiting_approval %>
            </td>
            <td>
              <%= job_request_not_awaiting_approval.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= job_request_not_awaiting_approval.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <% if job_request_not_awaiting_approval.awaiting_approval? %>
                <span class="label label-warning">Awaiting Approval</span>
              <% elsif job_request_not_awaiting_approval.accepted? %>
                <span class="label label-success">Approved</span>
              <% elsif job_request_not_awaiting_approval.denied? %>
                <span class="label label-danger">Rejected</span>
              <% elsif job_request_not_awaiting_approval.expired? %>
                <span class="label label-danger">Expired</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
    <%= will_paginate @job_requests_not_awaiting_approval %>
  <% end %>
</div>
<!-- /.page-wrapper -->
