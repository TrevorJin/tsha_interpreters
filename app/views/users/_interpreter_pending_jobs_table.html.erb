<% if @pending_jobs.count == 0 %>
  <%= render 'layouts/no_results_found_alert' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          Location
        </th>
        <th>
          Start
        </th>
        <th>
          End
        </th>
      </tr>
    </thead>
    <tbody>
      <% @pending_jobs.each do |pending_job| %>
        <tr>
          <td>
            <%= pending_job.city %>, <%= pending_job.state %>
          </td>
          <td>
            <%= pending_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
          <td>
            <%= pending_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- /.table table-striped table-hover -->
<% end %>
