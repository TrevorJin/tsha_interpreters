<% if @pending_jobs.count == 0 %>
  <%= render 'layouts/no_results_found_alert' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          Location
        </th>
        <th>
          Start Date
        </th>
        <th>
          Start Time
        </th>
      </tr>
    </thead>
    <tbody>
      <% @pending_jobs.each do |pending_job| %>
        <tr>
          <td>
            <%= pending_job.city %>, <%= pending_job.state %>
          </td>
          <td>
            <%= pending_job.start_date.to_formatted_s(:long_ordinal) %>
          </td>
          <td>
            <% if pending_job.start_time? %>
              <%= pending_job.start_time.strftime("%l:%M %p") %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- /.table table-striped table-hover -->
<% end %>
