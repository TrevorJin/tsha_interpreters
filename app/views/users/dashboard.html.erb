<% provide(:title, 'Manager Dashboard') %>
<%= render 'layouts/manager_dashboard' %>
<%= render 'layouts/alerts' %>
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Dashboard</h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-comments fa-5x"></i>
            </div>
            <!-- /.col-sx-3 -->
            <div class="col-xs-9 text-right">
              <div class="huge">
              	<%= @interpreters.count %>
              </div>
              <!-- /.huge -->
              <div>
              	Total Interpreters
              </div>
            </div>
            <!-- /.col-sx-9 text-right -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.panel-heading -->
          <%= link_to interpreters_path do %>
            <div class="panel-footer">
              <span class="pull-left">
                View Details
              </span>
              <!-- /.panel-footer -->
              <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
              <div class="clearfix"></div>
            </div>
            <!-- /.panel-footer -->
          <% end %>
      </div>
      <!-- /.panel panel-primary -->
    </div>
    <!-- /.col-lg-3 col-md-6 -->
    <div class="col-lg-3 col-md-6">
      <div class="panel panel-green">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
                <i class="fa fa-tasks fa-5x"></i>
            </div>
            <!-- /.col-sx-3 -->
            <div class="col-xs-9 text-right">
                <div class="huge">
                	<%= @jobs.count %>
                </div>
                <!-- /.huge -->
                <div>
                	Total Jobs
                </div>
            </div>
            <!-- /.col-xs-9 text-right -->
          </div>
          <!-- /.row -->
        </div>
        <!-- /.panel-heading -->
          <%= link_to jobs_path do %>
            <div class="panel-footer">
              <span class="pull-left">
                View Details
              </span>
              <!-- /.panel-footer -->
              <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
              <div class="clearfix"></div>
            </div>
            <!-- /.panel-footer -->
          <% end %>
        </div>
        <!-- /.panel panel-green -->
      </div>
      <!-- /.col-lg-3 col-md-6 -->
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-shopping-cart fa-5x"></i>
              </div>
              <!-- /.col-xs-3 -->
              <div class="col-xs-9 text-right">
                  <div class="huge">
                  	0
                  </div>
                  <!-- /.huge -->
                  <div>
                  	Job Requests
                  </div>
              </div>
              <!-- /.col-xs-9 text-right -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.panel-heading -->
          <a href="#">
            <div class="panel-footer">
              <span class="pull-left">
              	View Details
              </span>
              <!-- /.pull-left -->
              <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
              <div class="clearfix"></div>
            </div>
            <!-- /.panel-footer -->
          </a>
        </div>
        <!-- /.panel panel-yellow -->
      </div>
      <!-- /.col-lg-3 col-md-6 -->
      <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-users fa-5x"></i>
              </div>
              <!-- /.col-xs-3 -->
              <div class="col-xs-9 text-right">
                <div class="huge">
                	<%= @customers.count %>
                </div>
                <!-- /.huge -->
                <div>
                	Total Customers
                </div>
              </div>
              <!-- /.col-sx-9 text-right -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.panel-heading -->
          <%= link_to customers_path do %>
            <div class="panel-footer">
              <span class="pull-left">
                View Details
              </span>
              <!-- /.panel-footer -->
              <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
              <div class="clearfix"></div>
            </div>
            <!-- /.panel-footer -->
          <% end %>
        </div>
        <!-- /.panel panel-red -->
      </div>
      <!-- /.col-lg-3 col-md-6 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.page-wrapper -->
