<% provide(:title, 'Jobs Pending Approval') %>
<% render 'layouts/interpreter_or_manager_or_customer_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
        <% if user_logged_in? && current_user.approved? %>
          Jobs Pending Approval
        <% elsif user_logged_in? && !current_user.approved? %>
          Awaiting Approval
        <% elsif customer_logged_in? && !current_customer.approved? %>
          Awaiting Approval
        <% elsif customer_logged_in? && current_customer.approved? %>
          Pending Jobs
        <% end %>
      </h3>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <% if user_logged_in? && !current_user.manager? && !current_user.approved? %>
    <p style="text-align: center">
      Please wait for TSHA to approve your account before current jobs can be viewed.
    </p>
  <% elsif customer_logged_in? && !current_customer.approved? %>
    <p style="text-align: center">
      Please wait for TSHA to approve your account before current jobs can be viewed.
    </p>
  <% end %>
  <% if user_logged_in? && current_user.approved? && !current_user.manager? && @pending_jobs.count > 0 %>
		<table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            Location
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
        </tr>
      </thead>
      <tbody>
        <% @pending_jobs.each do |pending_job| %>
          <tr>
            <td>
              <%= pending_job.city %>, <%= pending_job.state %>
            </td>
            <td>
              <%= pending_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= pending_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% elsif user_logged_in? && current_user.manager? && @pending_jobs.count > 0 %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
           Customer Name
          </th>
          <th>
            Location
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
        </tr>
      </thead>
      <tbody>
        <% @pending_jobs.each do |pending_job| %>
          <tr>
            <td>
              <%= link_to "#{pending_job.id}", pending_job %>
            </td>
            <td>
              <%= link_to "#{pending_job.customer.customer_name}", pending_job %>
            </td>
            <td>
              <%= link_to "#{pending_job.city}, #{pending_job.state} #{pending_job.zip}", pending_job %>
            </td>
            <td>
              <%= pending_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= pending_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% elsif customer_logged_in? && @pending_jobs.count > 0 %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
           Customer Name
          </th>
          <th>
            Location
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
        </tr>
      </thead>
      <tbody>
        <% @pending_jobs.each do |pending_job| %>
          <tr>
            <td>
              <%= link_to "#{pending_job.id}", pending_job %>
            </td>
            <td>
              <%= link_to "#{pending_job.customer.customer_name}", pending_job %>
            </td>
            <td>
              <%= link_to "#{pending_job.city}, #{pending_job.state} #{pending_job.zip}", pending_job %>
            </td>
            <td>
              <%= pending_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= pending_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% end %>
</div>
<!-- /.page-wrapper -->
