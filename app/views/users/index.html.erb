<% provide(:title, 'All Interpreters') %>
<%= render 'layouts/manager_dashboard' %>
<%= render 'layouts/alerts' %>
<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        All Interpreters
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
	<%= form_tag(users_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Interpreters by First or Last Name" %>
    <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
    <button type="submit" class="btn btn-primary">
      Search
    </button>
  </div>
  <!-- /.input-append -->
	<% end %>

	<%= will_paginate %>

	<ul class="users">
		<%= render @users %>
	</ul>
  <!-- /.users -->

	<%= will_paginate %>
</div>
<!-- /.page-wrapper -->
