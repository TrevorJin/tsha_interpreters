<% provide(:title, 'Pending Users') %>
<%= render 'layouts/manager_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>

  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Pending Users
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <% if current_user.manager? %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          ID
        </th>
        <th>
          First Name
        </th>
        <th>
          Last Name
        </th>
        <th>
          Email
        </th>
        <th>
          Time of Request
        </th>
        <th>
          Action
        </th>
        <th>
          Gender
        </th>
      </tr>
    </thead>
    <tbody>
      <% @pending_users.each do |pending_user| %>
        <tr>
          <td>
            <%= pending_user.id %>
          </td>
          <td>
            <%= pending_user.first_name %>
          </td>
          <td>
            <%= pending_user.last_name %>
          </td>
          <td>
            <%= pending_user.email %>
          </td>
          <td>
            <%= pending_user.created_at.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
          <td>
            <div class="btn-group" role="group" aria-label="Justified button group">
              <%= link_to "Approve", approve_account_user_path(id: pending_user.id), class: "btn btn-success", role:"button", :data => {:confirm => "Are you sure you want to approve #{pending_user.first_name} #{pending_user.last_name}'s account? They will be notified via email."} %>
              <%= link_to "Deny", pending_user, method: :delete, class: "btn btn-danger", role:"button", :data => {:confirm => "Are you sure you want to permanently deny #{pending_user.first_name} #{pending_user.last_name}'s account request? (Warning: This cannot be reversed.)"} %>
            </div>
            <!-- /.btn-group btn-group-justified -->
          </td>
          <td>
            <%= pending_user.gender %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- /.table table-striped -->
  <% end %>  
</div>
<!-- /.page-wrapper -->
