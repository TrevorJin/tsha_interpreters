<% provide(:title, 'Search') %>
<%= render 'layouts/manager_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Search
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

  <%= form_tag(search_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Jobs and Job Requests by ID" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
             of using a Rails form helper -->
      <%= submit_tag "Search", :name => nil %>
    </div>
    <!-- /.input-append -->
  <% end %>

  <% if @results %>
    <% @results.each do |item| %>
      Result: <%= item.class.name %> with ID: <%= item.id%>
      <br>
    <% end %>
  <% end %>
</div>
<!-- /.page-wrapper -->
