<li>
  <% if user.admin? %>
  (Administrator)
  <% else %>
  <% if user.manager? %>
  (Manager)
  <% else %>
  (Interpreter)
  <% end %>
  <% end %>
  <%= link_to "#{user.first_name} #{user.last_name}", user %>
  <% if current_user?(user) %>
   (You)
  <% end %>
  <% if current_user.admin? && !current_user?(user) %>
   | Options:
  <% if user.admin? %>
   | <%= link_to "Demote to Manager?", users_demote_to_manager_path(id: user.id) %>
  <% elsif user.manager? %>
   | <%= link_to "Promote to Admin?", users_promote_to_admin_path(id: user.id) %>
   | <%= link_to "Demote to Interpreter?", users_demote_to_interpreter_path(id: user.id) %>
  <% elsif !user.admin? %>
   | <%= link_to "Promote to Manager?", users_promote_to_manager_path(id: user.id) %>
  <% end %>
  <% end %>
  <% if current_user.admin? && !current_user?(user) %>
   | <%= link_to "Delete this user?", user, method: :delete,
                                  data: { confirm: "Are you sure you want to delete this user?" } %>
  <% end %>
</li>
