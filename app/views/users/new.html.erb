<% if user_logged_in? && current_user.manager? %>
  <% provide(:title, 'Create An Interpreter') %>
  <%= render 'layouts/manager_dashboard' %>
<% else %>
  <% provide(:title, 'Sign Up As An Interpreter') %>
<% end %>
<%= render 'layouts/alerts' %>
<div class="row">
  <div class="col-lg-12">
    <h3 class="page-header">
      <% if user_logged_in? && current_user.manager? %>
        Create An Interpreter
      <% else %>
        Sign Up As An Interpreter
      <% end %>
    </h3>
    <!-- /.page-header -->
  </div>
  <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for @user do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :gender, :collection => gender_options %>
      <%= f.input :cell_phone %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.submit "Create Account", class: "btn btn-primary" %>
    <% end %>
  </div>
  <!-- /.col-md-4 col-md-offset-4 -->
</div>
<!-- /.row -->
<% if user_logged_in? && current_user.manager? %>
</div>
<!-- /.page-wrapper -->
<% end %>
