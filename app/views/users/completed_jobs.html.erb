<% provide(:title, 'Completed Jobs') %>
<% if user_logged_in? && current_user.manager? %>
  <%= render 'layouts/manager_dashboard' %>
<% elsif user_logged_in? && !current_user.manager? %>
  <%= render 'layouts/interpreter_dashboard' %>
<% elsif customer_logged_in? %>
  <%= render 'layouts/customer_dashboard' %>
<% end %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        <% if user_logged_in? && current_user.approved? %>
          Completed Jobs
        <% elsif user_logged_in? && !current_user.approved? %>
          Awaiting Approval
        <% elsif customer_logged_in? && !current_customer.approved? %>
          Awaiting Approval
        <% elsif customer_logged_in? && current_customer.approved? %>
          Completed Jobs
        <% end %>
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->
  <% if user_logged_in? && !current_user.manager? && !current_user.approved? %>
    <p style="text-align: center">
      Please wait for TSHA to approve your account before current jobs can be viewed.
    </p>
  <% elsif customer_logged_in? && !current_customer.approved? %>
    <p style="text-align: center">
      Please wait for TSHA to approve your account before current jobs can be viewed.
    </p>
  <% end %>
  <% if user_logged_in? && current_user.approved? && !current_user.manager? && @completed_jobs.count > 0 %>
		<table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
            Contact
          </th>
          <th>
            Location
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
          <th>
            Status
          </th>
        </tr>
      </thead>
      <tbody>
        <% @completed_jobs.each do |completed_job| %>
          <tr>
            <td>
              <%= link_to "Job ##{completed_job.id}", completed_job %>
            </td>
            <td>
              <%= link_to "#{completed_job.contact_person_first_name} #{completed_job.contact_person_last_name}", completed_job %>
            </td>
            <td>
              <%= completed_job.city %>, <%= completed_job.state %>
            </td>
            <td>
              <%= completed_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= completed_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <% @interpreter_invoice = InterpreterInvoice.where(user_id: current_user.id, job_id: completed_job.id).first %>
              <% if completed_job.job_status_processed? %>
                <span class="label label-success">Processed</span>
              <% elsif completed_job.start < Time.now && completed_job.end > Time.now %>
                <span class="label label-warning">In Progress</span>
              <% elsif completed_job.end < Time.now && !completed_job.invoice_submitted? && !@interpreter_invoice %>
                <span class="label label-warning">Awaiting Your Invoice</span>
              <% elsif completed_job.end < Time.now && !completed_job.invoice_submitted? && @interpreter_invoice %>
                <span class="label label-success">Waiting for Manager</span>
              <% elsif completed_job.end < Time.now && completed_job.invoice_submitted? %>
                <span class="label label-success">Invoice Submitted</span>
              <% elsif completed_job.start > Time.now %>
                <span class="label label-warning">Not Started</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% elsif user_logged_in? && current_user.manager? && @completed_jobs.count > 0 %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
           Customer Name
          </th>
          <th>
            Location
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
        </tr>
      </thead>
      <tbody>
        <% @completed_jobs.each do |completed_job| %>
          <tr>
            <td>
              <%= link_to "#{completed_job.id}", completed_job %>
            </td>
            <td>
              <%= link_to "#{completed_job.customer.customer_name}", completed_job %>
            </td>
            <td>
              <%= completed_job.city %>, <%= completed_job.state %> <%= completed_job.zip %>
            </td>
            <td>
              <%= completed_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= completed_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% elsif customer_logged_in? && @completed_jobs.count > 0 %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>
            ID
          </th>
          <th>
           Customer Name
          </th>
          <th>
            Location
          </th>
          <th>
            Start
          </th>
          <th>
            End
          </th>
        </tr>
      </thead>
      <tbody>
        <% @completed_jobs.each do |completed_job| %>
          <tr>
            <td>
              <%= link_to "#{completed_job.id}", completed_job %>
            </td>
            <td>
              <%= link_to "#{completed_job.customer.customer_name}", completed_job %>
            </td>
            <td>
              <%= completed_job.city %>, <%= completed_job.state %> <%= completed_job.zip %>
            </td>
            <td>
              <%= completed_job.start.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
            <td>
              <%= completed_job.end.strftime("%A, %d %b %Y %l:%M %p") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- /.table table-striped table-hover -->
  <% end %>
</div>
<!-- /.page-wrapper -->
