<% provide(:title, 'All Manager Invoices') %>
<%= render 'layouts/manager_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        All Manager Invoices
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">
        Search by: ID, Job Type, Address, Contact Name, or Contact Phone
      </h3>
      <!-- /.panel-title -->
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <%= form_tag(manager_invoices_path, :method => "get", class: "navbar-form", id: "search-form") do %>
        <div class="input-append">
          <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search" %>
            <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
          <button type="submit" class="btn btn-primary">
            Search
          </button>
            <!-- /.btn btn-primary -->
        </div>
          <!-- /.input-append -->
      <% end %>
    </div>
    <!-- /.panel-body -->
  </div>
  <!-- /.panel panel-info -->

  <%= will_paginate @manager_invoices %>

  <table class="table table-striped table-hover">
    <thead>
      <th>
        ID
      </th>
      <th>
        Job
      </th>
      <th>
        Interpreter Invoice
      </th>
      <th>
        Interpreter
      </th>
      <th>
        Start
      </th>
      <th>
        End
    </thead>
    <tbody>
      <% @manager_invoices.each do |manager_invoice| %>
        <tr>
          <td>
            <%= link_to "#{manager_invoice.id}", manager_invoice %>
          </td>
          <td>
            <%= link_to "#{manager_invoice.job.id}", manager_invoice.job %>
          </td>
          <td>
            <%= link_to "#{manager_invoice.interpreter_invoice.id}", manager_invoice.interpreter_invoice %>
          </td>
          <td>
            <%= link_to "#{manager_invoice.user.first_name} #{manager_invoice.user.last_name}", manager_invoice.user %>
          </td>
          <td>
            <%= manager_invoice.start.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
          <td>
            <%= manager_invoice.end.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
       </tr>
      <% end %>
    </tbody>
  </table>
  <!-- /.table table-striped table-hover -->

  <%= will_paginate @manager_invoices %>
</div>
<!-- /.page-wrapper -->
