<%= simple_form_for @manager_invoice do |f| %>
  <%= f.input :user_id, as: :hidden, :input_html => { :value => "#{params[:user_id]}" } %>
  <%= f.input :job_id, as: :hidden, :input_html => { :value => "#{params[:job_id]}" } %>
  <%= f.input :interpreter_invoice_id, as: :hidden, :input_html => { :value => "#{params[:interpreter_invoice_id]}" } %>
  <% if params[:start_date] %>
    <%= f.hint "Suggested Start Date from Interpreter Invoice: #{DateTime.parse(params[:start_date]).strftime("%Y-%m-%d")}" %>
  <% end %>
  <%= f.input :start_date, as: :date %>
  <% if params[:start_time] %>
    <%= f.hint "Suggested Start Time from Interpreter Invoice: #{DateTime.parse(params[:start_time]).strftime("%A, %d %b %Y %l:%M %p")}" %>
  <% end %>
  <%= f.input :start_time, as: :date %>
  <%= f.input :start_time, as: :time, :ampm => true, :ignore_date => true %>
  <% if params[:requested_end_time] %>
    <%= f.hint "Suggested Requested End Time from Interpreter Invoice: #{DateTime.parse(params[:requested_end_time]).strftime("%A, %d %b %Y %l:%M %p")}" %>
  <% end %>
  <%= f.input :requested_end_time, as: :date %>
  <%= f.input :requested_end_time, as: :time, :ampm => true, :ignore_date => true %>
  <% if params[:actual_end_time] %>
    <%= f.hint "Suggested Actual End Time from Interpreter Invoice: #{DateTime.parse(params[:actual_end_time]).strftime("%A, %d %b %Y %l:%M %p")}" %>
  <% end %>
  <%= f.input :actual_end_time, as: :date %>
  <%= f.input :actual_end_time, as: :time, :ampm => true, :ignore_date => true %>
  <% if params[:job_type] %>
    <%= f.input :job_type, :collection => job_types, :selected => params[:job_type] %>
  <% else %>
    <%= f.input :job_type, :collection => job_types, :selected => "Regular" %>
  <% end %>
  <% if params[:event_location_address_line_1] %>
    <%= f.input :event_location_address_line_1, :input_html => { :value => params[:event_location_address_line_1] } %>
  <% else %>
    <%= f.input :event_location_address_line_1 %>
  <% end %>
  <% if params[:event_location_address_line_2] %>
    <%= f.input :event_location_address_line_2, :input_html => { :value => params[:event_location_address_line_2] } %>
  <% else %>
    <%= f.input :event_location_address_line_2 %>
  <% end %>
  <% if params[:event_location_address_line_3] %>
    <%= f.input :event_location_address_line_3, :input_html => { :value => params[:event_location_address_line_3] } %>
  <% else %>
    <%= f.input :event_location_address_line_3 %>
  <% end %>
  <% if params[:contact_person_first_name] %>
    <%= f.input :contact_person_first_name, :input_html => { :value => params[:contact_person_first_name] } %>
  <% else %>
    <%= f.input :contact_person_first_name %>
  <% end %>
  <% if params[:contact_person_last_name] %>
    <%= f.input :contact_person_last_name, :input_html => { :value => params[:contact_person_last_name] } %>
  <% else %>
    <%= f.input :contact_person_last_name %>
  <% end %>
  <% if params[:contact_person_phone_number] %>
    <%= f.input :contact_person_phone_number, :input_html => { :value => params[:contact_person_phone_number] } %>
  <% else %>
    <%= f.input :contact_person_phone_number %>
  <% end %>
  <% if params[:miles] %>
    <%= f.input :miles, :input_html => { :value => params[:miles] }, placeholder: 'Example: 17' %>
  <% else %>
    <%= f.input :miles, placeholder: 'Example: 17' %>
  <% end %>
  <% if params[:mile_rate] %>
    <%= f.input :mile_rate, :input_html => { :value => params[:mile_rate] }, placeholder: 'Example: 8.50' %>
  <% else %>
    <%= f.input :mile_rate, placeholder: 'Example: 8.50' %>
  <% end %>
  <% if params[:misc_travel] %>
    <%= f.input :misc_travel, :input_html => { :value => params[:misc_travel] }, placeholder: 'Example: 3.45' %>
  <% else %>
    <%= f.input :misc_travel, placeholder: 'Example: 8.50' %>
  <% end %>
  <% if params[:interpreting_hours] %>
    <%= f.input :interpreting_hours, :input_html => { :value => params[:interpreting_hours] }, placeholder: 'Example: 2' %>
  <% else %>
    <%= f.input :interpreting_hours, placeholder: 'Example: 2' %>
  <% end %>
  <% if params[:interpreting_rate] %>
    <%= f.input :interpreting_rate, :input_html => { :value => params[:interpreting_rate] }, placeholder: 'Example: 8.50' %>
  <% else %>
    <%= f.input :interpreting_rate, placeholder: 'Example: 8.50' %>
  <% end %>
  <% if params[:extra_interpreting_hours] %>
    <%= f.input :extra_interpreting_hours, :input_html => { :value => params[:extra_interpreting_hours] }, placeholder: 'Example: 2' %>
  <% else %>
    <%= f.input :extra_interpreting_hours, placeholder: 'Example: 2' %>
  <% end %>
  <% if params[:extra_interpreting_rate] %>
    <%= f.input :extra_interpreting_rate, :input_html => { :value => params[:extra_interpreting_rate] }, placeholder: 'Example: 9.50' %>
  <% else %>
    <%= f.input :extra_interpreting_rate, placeholder: 'Example: 9.50' %>
  <% end %>
  <% if params[:legal_hours] %>
    <%= f.input :legal_hours, :input_html => { :value => params[:legal_hours] }, placeholder: 'Example: 5' %>
  <% else %>
    <%= f.input :legal_hours, placeholder: 'Example: 5' %>
  <% end %>
  <% if params[:legal_rate] %>
    <%= f.input :legal_rate, :input_html => { :value => params[:legal_rate] }, placeholder: 'Example: 10.50' %>
  <% else %>
    <%= f.input :legal_rate, placeholder: 'Example: 10.50' %>
  <% end %>
  <% if params[:extra_legal_hours] %>
    <%= f.input :extra_legal_hours, :input_html => { :value => params[:extra_legal_hours] }, placeholder: 'Example: 3' %>
  <% else %>
    <%= f.input :extra_legal_hours, placeholder: 'Example: 3' %>
  <% end %>
  <% if params[:extra_legal_rate] %>
    <%= f.input :extra_legal_rate, :input_html => { :value => params[:extra_legal_rate] }, placeholder: 'Example: 12.50' %>
  <% else %>
    <%= f.input :extra_legal_rate, placeholder: 'Example: 12.50' %>
  <% end %>
  <% if params[:interpreter_comments] %>
    <%= f.input :interpreter_comments, :input_html => { :value => params[:interpreter_comments] } %>
  <% else %>
    <%= f.input :interpreter_comments %>
  <% end %>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
