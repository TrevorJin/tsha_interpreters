<% provide(:title, @customer.customer_name) %>
<%= render 'layouts/manager_or_customer_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <aside class="col-lg-12">
      <section class="user_info">
        <%= render 'name_and_contact' %>
        <% if @customer.approved? && user_logged_in? && current_user.admin? %>
          <%= render 'admin_options' %>
        <% elsif !@customer.approved? && user_logged_in? && current_user.manager? %>
          <%= render 'manager_options' %>
        <% end %>
        <%= render 'customer_info_table' %>
        <% if @customer.approved? && user_logged_in? && current_user.manager? %>
          <%= render 'change_customer_info' %>
        <% end %>
        <%= render 'customer_addresses' %>
        <% if @customer.approved? && user_logged_in? && current_user.manager? %>
          <%= render 'customer_notes' %>
        <% end %>
        <% if @customer.approved? && user_logged_in? && current_user.manager? %>
          <%= render 'jobs_table' %>
        <% end %>
    	</section>
    	<!-- /.user_info -->
  	</aside>
  	<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
</div>
<!-- /.page-wrapper -->
