<% provide(:title, 'Pending Customers') %>
<%= render 'layouts/manager_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>

  <div class="row">
    <div class="col-lg-12">
      <h3 class="page-header">
        Pending Customers
      </h3>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">
        Search by: ID, Name, Contact First Name, Contact Last Name, Email, Phone Number, Fax, or Address
      </h3>
      <!-- /.panel-title -->
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <% if params[:search].present? %>
        <% if params[:search][:account_requested_after].present? %>
          <% if params[:search][:account_requested_before].present? %>
            <% if params[:search][:query].present? %>
              <%= simple_form_for :search,  url: pending_customers_path , :method => :get do |f| %>
                <%= f.input :account_requested_after, as: :date_time_picker, input_html: { value: params[:search][:account_requested_after] } %>
                <%= f.input :account_requested_before, as: :second_date_time_picker, input_html: { value: params[:search][:account_requested_before] } %>
                <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
                <%= f.submit "Search" %>
              <% end %>
            <% else %>
              <%= simple_form_for :search,  url: pending_customers_path , :method => :get do |f| %>
                <%= f.input :account_requested_after, as: :date_time_picker, input_html: { value: params[:search][:account_requested_after] } %>
                <%= f.input :account_requested_before, as: :second_date_time_picker, input_html: { value: params[:search][:account_requested_before] } %>
                <%= f.input :query, :autofocus => true %>
                <%= f.submit "Search" %>
              <% end %>
            <% end %>
          <% elsif params[:search][:query].present? %>
            <%= simple_form_for :search,  url: pending_customers_path , :method => :get do |f| %>
              <%= f.input :account_requested_after, as: :date_time_picker, input_html: { value: params[:search][:account_requested_after] } %>
              <%= f.input :account_requested_before, as: :second_date_time_picker %>
              <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
              <%= f.submit "Search" %>
            <% end %>
          <% else %>
            <%= simple_form_for :search,  url: pending_customers_path , :method => :get do |f| %>
              <%= f.input :account_requested_after, as: :date_time_picker, input_html: { value: params[:search][:account_requested_after] } %>
              <%= f.input :account_requested_before, as: :second_date_time_picker %>
              <%= f.input :query, :autofocus => true %>
              <%= f.submit "Search" %>
            <% end %>
          <% end %>
        <% elsif params[:search][:account_requested_before].present? %>
          <% if params[:search][:query].present? %>
            <%= simple_form_for :search,  url: pending_customers_path , :method => :get do |f| %>
              <%= f.input :account_requested_after, as: :date_time_picker %>
              <%= f.input :account_requested_before, as: :second_date_time_picker, input_html: { value: params[:search][:account_requested_before] } %>
              <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
              <%= f.submit "Search" %>
            <% end %>
          <% else %>
            <%= simple_form_for :search,  url: pending_customers_path , :method => :get do |f| %>
              <%= f.input :account_requested_after, as: :date_time_picker %>
              <%= f.input :account_requested_before, as: :second_date_time_picker, input_html: { value: params[:search][:account_requested_before] } %>
              <%= f.input :query, :autofocus => true %>
              <%= f.submit "Search" %>
            <% end %>
          <% end %>
        <% else %>
          <%= simple_form_for :search,  url: pending_customers_path , :method => :get do |f| %>
            <%= f.input :account_requested_after, as: :date_time_picker %>
            <%= f.input :account_requested_before, as: :second_date_time_picker %>
            <%= f.input :query, :autofocus => true, input_html: { value: params[:search][:query] } %>
            <%= f.submit "Search" %>
          <% end %>
        <% end %>
      <% else %>
        <%= simple_form_for :search,  url: pending_customers_path , :method => :get do |f| %>
          <%= f.input :account_requested_after, as: :date_time_picker %>
          <%= f.input :account_requested_before, as: :second_date_time_picker %>
          <%= f.input :query, :autofocus => true %>
          <%= f.submit "Search" %>
        <% end %>
      <% end %>
    </div>
    <!-- /.panel-body -->
  </div>
  <!-- /.panel panel-info -->

  <script type="text/javascript">
    $('.form_datetime').datetimepicker({
      autoclose: true,
      todayBtn: true,
      pickerPosition: "bottom-left",
      format: 'mm-dd-yyyy hh:ii'
    });
    $('.second_form_datetime').datetimepicker({
      autoclose: true,
      todayBtn: true,
      pickerPosition: "bottom-left",
      format: 'mm-dd-yyyy hh:ii'
    });
  </script>

  <%= will_paginate @pending_customers %>

  <% if @pending_customers.count == 0 %>
    <div class="alert alert-info" role="alert">No results found.</div>
  <% end %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          ID
        </th>
        <th>
          Customer Name
        </th>
        <th>
          Contact
        </th>
        <th>
          Email
        </th>
        <th>
          Time of Request
        </th>
        <th>
          Action
        </th>
      </tr>
    </thead>
    <tbody>
      <% @pending_customers.each do |pending_customer| %>
        <tr>
          <td>
            <%= link_to "#{pending_customer.id}", pending_customer %>
          </td>
          <td>
            <%= link_to "#{pending_customer.customer_name}", pending_customer %>
          </td>
          <td>
            <%= link_to "#{pending_customer.contact_first_name} #{pending_customer.contact_last_name}", pending_customer %>
          </td>
          <td>
            <%= link_to "#{pending_customer.email}", pending_customer %>
          </td>
          <td>
            <%= pending_customer.created_at.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
          <td>
            <div class="btn-group" role="group" aria-label="Justified button group">
              <%= link_to "Approve", approve_account_customer_path(id: pending_customer.id), class: "btn btn-success", role:"button", :data => {:confirm => "Are you sure you want to approve the account for #{pending_customer.customer_name}? They will be notified via email."} %>
              <%= link_to "Deny", pending_customer, method: :delete, class: "btn btn-danger", role:"button", :data => {:confirm => "Are you sure you want to permanently deny the account request for #{pending_customer.customer_name}? (Warning: This cannot be reversed.)"} %>
            </div>
            <!-- /.btn-group btn-group-justified -->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- /.table table-striped -->
  
  <%= will_paginate @pending_customers %>
</div>
<!-- /.page-wrapper -->
