<h3 class="page-header">
  Job History
</h3>
<!-- /.page-header -->
<% if @jobs.count == 0 %>
  <div class="alert alert-info" role="alert">
    No results found.
  </div>
  <!-- /.alert alert-info -->
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          ID
        </th>
        <th>
         Customer Name
        </th>
        <th>
          Location
        </th>
        <th>
          Start
        </th>
        <th>
          End
        </th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= link_to "#{job.id}", job %>
          </td>
          <td>
            <%= link_to "#{job.customer.customer_name}", job %>
          </td>
          <td>
            <%= job.city %>, <%= job.state %> <%= job.zip %>
          </td>
          <td>
            <%= job.start.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
          <td>
            <%= job.end.strftime("%A, %d %b %Y %l:%M %p") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!-- /.table table-striped table-hover -->
<% end %>
