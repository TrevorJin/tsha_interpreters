<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>
        TSHA Number
      </th>
      <th>
        System ID
      </th>
      <th>
        Customer Name
      </th>
      <th>
        Email
      </th>
      <th>
        Fax Number
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @customer.tsha_number %>
      </td>
      <td>
        <%= @customer.id %>
      </td>
      <td>
        <%= @customer.customer_name %>
      </td>
      <td>
        <%= @customer.email %>
      </td>
      <td>
        <%= @customer.fax %>
      </td>
    </tr>
  </tbody>
  <thead>
    <tr>
      <th>
        Customer Phone
      </th>
      <th>
        Phone Ext.
      </th>
      <th>
        Contact Name
      </th>
      <th>
        Contact Phone
      </th>
      <th>
        Contact Phone Ext.
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @customer.phone_number %>
      </td>
      <td>
        <%= @customer.phone_number_extension %>
      </td>
      <td>
        <%= @customer.contact_first_name %> <%= @customer.contact_last_name %>
      </td>
      <td>
        <%= @customer.contact_phone_number %>
      </td>
      <td>
        <%= @customer.contact_phone_number_extension %>
      </td>
    </tr>
  </tbody>
  <% if user_logged_in? && current_user.manager? %>
    <thead>
      <tr>
        <th>
          Fund Number
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= @customer.fund_number %>
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>
<!-- /.table table-striped table-hover -->
