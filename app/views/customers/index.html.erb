<% provide(:title, 'All Customers') %>
<%= render 'layouts/manager_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Customers
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">
        Search by: ID, Name, Contact First Name, Contact Last Name, Email, Phone Number, Fax, or Address
      </h3>
      <!-- /.panel-title -->
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <%= form_tag(customers_path, :method => "get", class: "navbar-form", id: "search-form") do %>
        <div class="input-append">
          <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search" %>
            <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
          <button type="submit" class="btn btn-primary">
            Search
          </button>
            <!-- /.btn btn-primary -->
        </div>
          <!-- /.input-append -->
      <% end %>
    </div>
    <!-- /.panel-body -->
  </div>
  <!-- /.panel panel-info -->



  <%= will_paginate %>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          ID
        </th>
        <th>
          Customer Name
        </th>
        <th>
          Contact Name
        </th>
        <th>
          Email
        </th>
        <th>
          Approved?
        </th>
        <th>
          Active?
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @customers %>
    </tbody>
  </table>
  <!-- /.table table-striped -->

  <%= will_paginate %>
</div>
<!-- /.page-wrapper -->
