<% provide(:title, 'All Customers') %>
<%= render 'layouts/manager_dashboard' %>
<div id="page-wrapper">
  <%= render 'layouts/alerts' %>
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        All Customers
      </h1>
      <!-- /.page-header -->
    </div>
    <!-- /.col-lg-12 -->
  </div>
  <!-- /.row -->

  <%= form_tag(customers_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Customers by Name" %>
    <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
    <button type="submit" class="btn btn-primary">
      Search
    </button>
  </div>
  <!-- /.input-append -->
  <% end %>

  <%= will_paginate %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          ID
        </th>
        <th>
          Customer Name
        </th>
        <th>
          Contact's First Name
        </th>
        <th>
          Contact's Last Name
        </th>
        <th>
          Email
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @customers %>
    </tbody>
  </table>
  <!-- /.table table-striped -->

  <%= will_paginate %>
</div>
<!-- /.page-wrapper -->
