<% if @customers.count == 0 %>
  <%= render 'layouts/no_results_found_alert' %>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>
          THSA #
        </th>
        <th>
          Customer Name
        </th>
        <th>
          Contact Name
        </th>
        <th>
          Email
        </th>
        <th>
          Approved?
        </th>
        <th>
          Activated?
        </th>
      </tr>
    </thead>
    <tbody>
      <%= render @customers %>
    </tbody>
  </table>
  <!-- /.table table-striped -->
<% end %>
