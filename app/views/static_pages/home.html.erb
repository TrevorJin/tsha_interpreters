<div class="container">
  <%= render 'layouts/alerts' %>
  <div class="center jumbotron">
    <h1>
      TSHA Interpreter System
    </h1>
    <h2>
      This is the home page for TSHA's interpreter matching system. For more info on TSHA, please visit <a href="http://www.tsha.cc/">TSHA's website</a>.
    </h2>
    <% if !user_logged_in? && !customer_logged_in? %>
      <%= link_to "Looking for an interpreter? Sign up as a customer", customer_signup_path, class: "btn btn-lg btn-primary" %>
      <%= link_to "Sign up as an interpreter", interpreter_signup_path, class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
  <!-- /.center jumbotron -->
</div>
<!-- /.container -->
